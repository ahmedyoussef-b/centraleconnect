{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capacités par défaut pour CentraleConnect",
    "local": true,
    "windows": ["main"],
    "permissions": [
      "shell:allow-open",
      "dialog:allow-open",
      "dialog:allow-save",
      "fs:allow-read-file",
      "fs:allow-write-file",
      "fs:allow-exists",
      "fs:scope-appdata-recursive",
      "fs:scope-resource-recursive",
      "core:window:allow-center",
      "core:window:allow-set-size",
      "core:window:allow-set-title"
    ],
    "platforms": ["windows", "linux", "macOS"]
  }
