{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "centraleconnect",
    "version": "0.1.0"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; connect-src 'self' http://localhost:3000 https:"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "CentraleConnect",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "identifier": "com.centraleconnect.app",
    "resources": [
      "../src/assets/master-data/pupitre-data.json",
      "../public/models/**/*",
      "../public/assets/pids/**/*"
    ],
    "externalBin": [],
    "copyright": "© 2026 CentraleConnect",
    "shortDescription": "Supervision centrale électrique",
    "longDescription": "Application de monitoring pour cycle combiné",
    "publisher": "CentraleConnect Team"
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**", "$RESOURCE/**"]
    }
  },
  "permissions": [
    "shell:open",
    "dialog:open",
    "dialog:save",
    "window:all",
    "fs:all"
  ]
}
