{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:9002",
    "distDir": "../out",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ccpp-monitor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "path": {
        "all": true
      },
      "microphone": true
    },
    "plugins": {
      "sql": {
        "preload": [
          "sqlite:ccpp.db"
        ]
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.ccpp.monitor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "CCPP Monitor",
        "width": 1280
      }
    ]
  }
}
