// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./ccpp.db"
}

// Modèle pour les composants physiques principaux
model Component {
  tag            String       @id
  name           String
  type           String?
  subtype        String?
  manufacturer   String?
  serialNumber   String?
  location       String?
  parameters     Parameter[]
  alarms         Alarm[]
  logEntries     LogEntry[]
  documents      Document[]

  @@map("components")
}

// Modèle pour les paramètres techniques des composants
model Parameter {
  id             Int       @id @default(autoincrement())
  component_tag  String
  key            String
  name           String
  unit           String?
  nominal_value  Float?
  min_safe       Float?
  max_safe       Float?
  alarm_high     Float?
  alarm_low      Float?
  standard_ref   String?
  component      Component @relation(fields: [component_tag], references: [tag])

  @@unique([component_tag, key])
  @@map("parameters")
}

// Modèle pour les alarmes de référence
model Alarm {
  code            String    @id
  component_tag   String
  severity        String
  description     String
  parameter       String?
  reset_procedure String?
  standard_ref    String?
  component       Component @relation(fields: [component_tag], references: [tag])

  @@map("alarms")
}

// Modèle pour les nœuds fonctionnels issus des P&ID
model FunctionalNode {
  external_id       String       @id
  system            String
  subsystem         String
  document          String?
  tag               String?
  type              String?
  name              String?
  description       String?
  location          String?
  coordinates       String? // JSON string
  linked_parameters String? // JSON string of parameter keys
  svg_layer         String?
  fire_zone         String?
  status            String?
  checksum          String       @unique // SHA-256 checksum for data integrity
  created_at        DateTime     @default(now())
  updated_at        DateTime?    @updatedAt
  approved_by       String?
  approved_at       String?
  logEntries        LogEntry[]
  annotations       Annotation[]

  @@map("functional_nodes")
}

// Modèle pour les entrées du journal de bord
model LogEntry {
  id                 Int      @id @default(autoincrement())
  timestamp          DateTime @default(now())
  type               String
  source             String
  message            String
  component_tag      String?
  functional_node_id String?
  signature          String   @unique

  component        Component?      @relation(fields: [component_tag], references: [tag])
  functionalNode   FunctionalNode? @relation(fields: [functional_node_id], references: [external_id])

  @@map("log_entries")
}

// Modèle pour les annotations sur les P&ID
model Annotation {
  id                        Int          @id @default(autoincrement())
  functional_node_external_id String
  text                      String
  operator                  String
  timestamp                 DateTime     @default(now())
  x_pos                     Float
  y_pos                     Float
  functionalNode            FunctionalNode @relation(fields: [functional_node_external_id], references: [external_id])

  @@map("annotations")
}


// Modèle pour les documents (images, etc.) liés aux composants
model Document {
  id            Int       @id @default(autoincrement())
  component_tag String
  imageData     String
  ocrText       String?
  description   String?
  createdAt     DateTime  @default(now())
  component     Component @relation(fields: [component_tag], references: [tag])

  @@map("documents")
}
