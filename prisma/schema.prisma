generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------------------
// Central Equipment and Master Data
// -------------------------------------

model Equipment {
  externalId       String        @id @map("external_id")
  name             String
  description      String?
  parentId         String?       @map("parent_id")
  type             String?
  subtype          String?
  systemCode       String?       @map("system_code")
  subSystem        String?       @map("sub_system")
  location         String?
  manufacturer     String?
  serialNumber     String?       @map("serial_number")
  documentRef      String?       @map("document_ref")
  coordinates      String?
  svgLayer         String?       @map("svg_layer")
  fireZone         String?       @map("fire_zone")
  linkedParameters String?
  status           String?
  version          Int           @default(1)
  isImmutable      Boolean       @default(false) @map("is_immutable")
  approvedBy       String?       @map("approved_by")
  approvedAt       DateTime?     @map("approved_at")
  checksum         String?       @unique
  nominalData      Json?         @map("nominal_data")

  // Relations
  parameters    Parameter[]
  alarms        Alarm[]
  logEntries    LogEntry[]
  annotations   Annotation[]
  documents     Document[]
  synopticItems SynopticItem?
  scadaData     ScadaData[] // FIX: Added missing back-relation

  @@map("equipments")
}

model Parameter {
  id           Int     @id @default(autoincrement())
  equipmentId  String  @map("equipment_id")
  name         String
  unit         String?
  nominalValue Float?  @map("nominal_value")
  minSafe      Float?  @map("min_safe")
  maxSafe      Float?  @map("max_safe")
  alarmHigh    Float?  @map("alarm_high")
  alarmLow     Float?  @map("alarm_low")
  standardRef  String? @map("standard_ref")
  equipment    Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("parameters")
}

model Alarm {
  code           String      @id
  equipmentId    String      @map("equipment_id")
  severity       String
  description    String
  parameter      String?
  resetProcedure String?     @map("reset_procedure")
  standardRef    String?     @map("standard_ref")
  equipment      Equipment   @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  events         AlarmEvent[]

  @@map("alarms")
}

// -------------------------------------
// Dynamic and Log Data
// -------------------------------------

model LogEntry {
  id          Int       @id @default(autoincrement())
  timestamp   DateTime  @map("timestamp")
  type        String
  source      String
  message     String
  signature   String    @unique
  equipmentId String?   @map("equipment_id")
  equipment   Equipment? @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("log_entries")
}

model AlarmEvent {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @map("timestamp")
  isActive  Boolean  @map("is_active")
  details   String?
  alarmCode String   @map("alarm_code")
  alarm     Alarm    @relation(fields: [alarmCode], references: [code], onDelete: Cascade)

  @@map("alarm_events")
}

model ScadaData {
  id          Int       @id @default(autoincrement())
  timestamp   DateTime  @map("timestamp")
  value       Float
  equipmentId String    @map("equipment_id")
  equipment   Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("scada_data")
}

model Annotation {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @map("timestamp")
  text        String
  operator    String
  xPos        Float    @map("x_pos")
  yPos        Float    @map("y_pos")
  equipmentId String   @map("equipment_id")
  equipment   Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("annotations")
}

model Document {
  id             Int       @id @default(autoincrement())
  equipmentId    String    @map("equipment_id")
  imageData      String    @map("image_data") @db.Text
  ocrText        String?   @map("ocr_text")
  description    String?
  createdAt      DateTime  @map("created_at") @default(now())
  perceptualHash String?   @map("perceptual_hash")
  equipment      Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("documents")
}

// -------------------------------------
// Static Configuration Data
// -------------------------------------

model Procedure {
  id          String  @id
  name        String
  description String?
  version     String?
  steps       String // JSON stored as string

  @@map("procedures")
}

model SynopticItem {
  externalId    String     @id @map("external_id")
  name          String?
  type          String?
  parentId      String?    @map("parent_id")
  groupPath     String?    @map("group_path")
  elementId     String?    @unique @map("element_id")
  level         Int?
  approvedBy    String?    @map("approved_by")
  approvalDate  String?    @map("approval_date")
  element       Equipment? @relation(fields: [elementId], references: [externalId])

  @@map("synoptic_items")
}
