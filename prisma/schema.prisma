// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// Nouveaux Enums
// --------------------------------------

enum MediaType {
  PHOTO
  VIDEO
  THERMIQUE
  SPECTRO
}

enum SyncStatus {
  PENDING
  SYNCED
  CONFLICT
}


// --------------------------------------
// Modèles de base
// --------------------------------------

model User {
  id                  String           @id @default(cuid())
  email               String?          @unique
  name                String?
  visualEvidence      VisualEvidence[]
  validatedTraining   VisualTraining[] @relation("ValidatedBy")
}

model Equipment {
  externalId        String            @id @map("external_id")
  name              String
  description       String?
  parentId          String?           @map("parent_id")
  type              String?
  subtype           String?
  systemCode        String?           @map("system_code")
  subSystem         String?           @map("sub_system")
  location          String?
  manufacturer      String?
  serialNumber      String?           @map("serial_number")
  documentRef       String?           @map("document_ref")
  coordinates       Json?
  svgLayer          String?           @map("svg_layer")
  fireZone          String?           @map("fire_zone")
  linkedParameters  Json?             @map("linked_parameters")
  status            String?
  version           Int               @default(1)
  isImmutable       Boolean           @default(false) @map("is_immutable")
  approvedBy        String?           @map("approved_by")
  approvedAt        DateTime?         @map("approved_at")
  commissioningDate DateTime?         @map("commissioning_date")
  checksum          String?           @unique
  nominalData       Json?             @map("nominal_data")
  
  parameters        Parameter[]
  alarms            Alarm[]
  logEntries        LogEntry[]
  documents         Document[]
  visualEvidence    VisualEvidence[]
  trainingData      VisualTraining[]  @relation("TrainingEquipment")

  @@map("equipments")
}

model Parameter {
  id            Int       @id @default(autoincrement())
  equipmentId   String    @map("equipment_id")
  name          String
  unit          String?
  nominalValue  Float?    @map("nominal_value")
  minSafe       Float?    @map("min_safe")
  maxSafe       Float?    @map("max_safe")
  alarmHigh     Float?    @map("alarm_high")
  alarmLow      Float?    @map("alarm_low")
  standardRef   String?   @map("standard_ref")
  equipment     Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("parameters")
}

model Alarm {
  code            String    @id
  equipmentId     String    @map("equipment_id")
  severity        String
  description     String
  parameter       String?
  resetProcedure  String?   @map("reset_procedure")
  standardRef     String?   @map("standard_ref")
  equipment       Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  alarmEvents     AlarmEvent[]

  @@map("alarms")
}

model LogEntry {
  id                Int             @id @default(autoincrement())
  timestamp         DateTime
  type              String
  source            String
  message           String
  equipmentId       String?         @map("equipment_id")
  signature         String          @unique
  equipment         Equipment?      @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  visualEvidenceId  String?
  visualEvidence    VisualEvidence? @relation(fields: [visualEvidenceId], references: [id])

  @@map("log_entries")
}

model Procedure {
  id          String   @id
  name        String
  description String?
  version     String?
  steps       Json

  @@map("procedures")
}

model Document {
  id              Int        @id @default(autoincrement())
  equipmentId     String     @map("equipment_id")
  imageData       String     @map("image_data")
  ocrText         String?    @map("ocr_text")
  description     String?
  createdAt       DateTime   @default(now()) @map("created_at")
  perceptualHash  String?    @map("perceptual_hash")
  equipment       Equipment  @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)

  @@map("documents")
}

model Annotation {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  text        String
  operator    String
  xPos        Float    @map("x_pos")
  yPos        Float    @map("y_pos")
  equipmentId String   @map("equipment_id")

  @@map("annotations")
}

model SynopticItem {
  externalId    String  @id @map("external_id")
  name          String?
  type          String?
  parentId      String? @map("parent_id")
  groupPath     String? @map("group_path")
  elementId     String? @map("element_id")
  level         Int?
  approvedBy    String? @map("approved_by")
  approvalDate  String? @map("approval_date")

  @@map("synoptic_items")
}

model AlarmEvent {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  isActive    Boolean  @map("is_active")
  details     String?
  alarmCode   String   @map("alarm_code")
  alarm       Alarm    @relation(fields: [alarmCode], references: [code])

  @@map("alarm_events")
}

model ScadaData {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  value       Float
  equipmentId String   @map("equipment_id")

  @@map("scada_data")
}

// --------------------------------------
// Nouveaux Modèles Visuels
// --------------------------------------

model VisualEvidence {
  id             String   @id @default(cuid())
  
  // Média
  type           MediaType
  mimeType       String
  size           Int
  width          Int?
  height         Int?
  duration       Int?
  
  // Hashs
  sha256         String   @unique
  phash          String?
  
  // Contexte
  equipmentId    String?
  equipment      Equipment? @relation(fields: [equipmentId], references: [externalId])
  procedureId    String?
  consignmentId  String?
  workOrderId    String?
  
  // Utilisateur
  createdById    String
  createdBy      User     @relation(fields: [createdById], references: [id])
  createdAt      DateTime @default(now())
  
  // Annotations
  annotations    Json
  
  // Analyse IA
  analysis       Json?
  analysisVersion String?
  analysisAt     DateTime?
  
  // Traçabilité
  signature      String
  syncStatus     SyncStatus @default(PENDING)
  
  // Relations inverses
  logEntries     LogEntry[]
  trainingData   VisualTraining[]
  
  @@index([equipmentId])
  @@index([phash])
  @@index([createdAt])
}

model VisualTraining {
  id             String      @id @default(cuid())
  
  // Donnée labellisée
  imageId        String
  image          VisualEvidence @relation(fields: [imageId], references: [id])
  
  // Labels humains
  equipmentId    String?
  equipment      Equipment?  @relation("TrainingEquipment", fields: [equipmentId], references: [externalId])
  anomalyType    String?
  boundingBox    Json?
  
  // Validation
  validatedById  String?
  validatedBy    User?       @relation("ValidatedBy", fields: [validatedById], references: [id])
  validatedAt    DateTime?
  
  createdAt      DateTime    @default(now())
  
  @@unique([imageId, validatedById])
}
