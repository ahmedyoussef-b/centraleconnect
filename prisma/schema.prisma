generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Equipment {
  externalId        String       @id @map("external_id")
  name              String
  description       String?
  parentId          String?      @map("parent_id")
  type              String?
  subtype           String?
  systemCode        String?      @map("system_code")
  subSystem         String?      @map("sub_system")
  location          String?
  manufacturer      String?
  serialNumber      String?      @map("serial_number")
  documentRef       String?      @map("document_ref")
  coordinates       String?
  svgLayer          String?      @map("svg_layer")
  fireZone          String?      @map("fire_zone")
  linkedParameters  String?      @map("linked_parameters")
  status            String?
  version           Int          @default(1)
  isImmutable       Boolean      @default(false) @map("is_immutable")
  approvedBy        String?      @map("approved_by")
  approvedAt        DateTime?    @map("approved_at")
  checksum          String?      @unique
  nominalData       Json?        @map("nominal_data")
  parameters        Parameter[]
  alarms            Alarm[]
  logEntries        LogEntry[]
  documents         Document[]
  annotations       Annotation[]
}

model Parameter {
  id            Int      @id @default(autoincrement())
  equipment     Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  equipmentId   String   @map("equipment_id")
  name          String
  unit          String?
  // ❌ SUPPRIMÉ : dataType n'existe pas dans Prisma
  // dataType      String   @default("TEXT") @map("data_type")
  nominalValue  Float?   @map("nominal_value")
  minSafe       Float?   @map("min_safe")
  maxSafe       Float?   @map("max_safe")
  alarmHigh     Float?   @map("alarm_high")
  alarmLow      Float?   @map("alarm_low")
  standardRef   String?  @map("standard_ref")
}

model Alarm {
  code            String      @id
  equipment       Equipment   @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  equipmentId     String      @map("equipment_id")
  severity        String
  description     String
  parameter       String?
  resetProcedure  String?     @map("reset_procedure")
  standardRef     String?     @map("standard_ref")
  events          AlarmEvent[]
}

model LogEntry {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @db.Timestamp(6)
  type        String
  source      String
  message     String
  equipment   Equipment? @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  equipmentId String?  @map("equipment_id")
  signature   String   @unique
}

model AlarmEvent {
  id        Int      @id @default(autoincrement())
  alarm     Alarm    @relation(fields: [alarmCode], references: [code], onDelete: Cascade)
  alarmCode String   @map("alarm_code")
  timestamp DateTime @db.Timestamp(6)
  isActive  Boolean  @map("is_active")
  details   String?
}

model ScadaData {
  id          Int      @id @default(autoincrement())
  equipment   Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  equipmentId String   @map("equipment_id")
  timestamp   DateTime @db.Timestamp(6)
  value       Float
}

model Annotation {
  id          Int      @id @default(autoincrement())
  equipment   Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  equipmentId String   @map("equipment_id")
  timestamp   DateTime @db.Timestamp(6)
  text        String
  operator    String
  xPos        Float    @map("x_pos")
  yPos        Float    @map("y_pos")
}

model Document {
  id              Int       @id @default(autoincrement())
  equipment       Equipment @relation(fields: [equipmentId], references: [externalId], onDelete: Cascade)
  equipmentId     String    @map("equipment_id")
  imageData       String    @map("image_data")
  ocrText         String?   @map("ocr_text")
  description     String?
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamp(6)
  perceptualHash  String?   @map("perceptual_hash")
}


model Procedure {
  id          String  @id
  name        String
  description String?
  version     String?
  steps       String?
}

model SynopticItem {
  externalId    String  @id @map("external_id")
  name          String?
  type          String?
  parentId      String? @map("parent_id")
  groupPath     String? @map("group_path")
  elementId     String? @map("element_id")
  level         Int?
  approvedBy    String? @map("approved_by")
  approvalDate  String? @map("approval_date")
}
