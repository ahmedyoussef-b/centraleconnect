// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model FunctionalNode {
  id                Int       @id @default(autoincrement())
  external_id       String    @unique
  system            String
  subsystem         String
  document          String
  tag               String?
  type              String
  name              String
  description       String
  location          String
  coordinates       Json
  linked_parameters Json
  svg_layer         String
  fire_zone         String?
  status            String
  checksum          String    @unique
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@index([system])
  @@index([external_id])
  @@index([tag])
}
