datasource db {
  provider = "sqlite"
  url      = "file:./ccpp.db"
}

generator client {
  provider = "prisma-client-js"
}

model Component {
  tag          String      @id
  name         String
  type         String
  subtype      String?
  manufacturer String?
  serialNumber String?
  location     String?
  parameters   Parameter[]
  alarms       Alarm[]
  documents    Document[]
  logEntries   LogEntry[]

  @@map("components")
}

model Parameter {
  id            Int       @id @default(autoincrement())
  component_tag String
  key           String
  name          String
  unit          String?
  nominal_value Float?
  min_safe      Float?
  max_safe      Float?
  alarm_high    Float?
  alarm_low     Float?
  standard_ref  String?
  component     Component @relation(fields: [component_tag], references: [tag])

  @@unique([component_tag, key])
  @@map("parameters")
}

model Alarm {
  code            String    @id
  component_tag   String
  severity        String
  description     String
  parameter       String?
  reset_procedure String?
  standard_ref    String?
  component       Component @relation(fields: [component_tag], references: [tag])

  @@map("alarms")
}

model FunctionalNode {
  external_id       String       @id
  system            String
  subsystem         String
  document          String?
  tag               String?
  type              String
  name              String
  description       String?
  location          String?
  coordinates       Json
  linked_parameters Json
  svg_layer         String?
  fire_zone         String?
  status            String
  checksum          String
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt
  approved_by       String?
  approved_at       String?
  annotations       Annotation[]
  logEntries        LogEntry[]

  @@map("functional_nodes")
}

model LogEntry {
  id                 Int             @id @default(autoincrement())
  timestamp          DateTime        @default(now())
  type               String
  source             String
  message            String
  signature          String          @unique
  component_tag      String?
  functional_node_id String?
  Component          Component?      @relation(fields: [component_tag], references: [tag])
  FunctionalNode     FunctionalNode? @relation(fields: [functional_node_id], references: [external_id])

  @@map("log_entries")
}

model Annotation {
  id                          Int            @id @default(autoincrement())
  functional_node_external_id String
  text                        String
  operator                    String
  timestamp                   DateTime       @default(now())
  x_pos                       Float
  y_pos                       Float
  node                        FunctionalNode @relation(fields: [functional_node_external_id], references: [external_id])

  @@map("annotations")
}

model Document {
  id            Int       @id @default(autoincrement())
  component_tag String
  imageData     String
  ocrText       String?
  description   String?
  createdAt     DateTime  @default(now())
  component     Component @relation(fields: [component_tag], references: [tag])

  @@map("documents")
}
